/**app.wxss**/
page {
  background-color: #16213e;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 10rpx;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #0f3460;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #16213e;
}

.btn-secondary {
  background-color: #533483;
  color: #ffffff;
}

.btn-secondary:active {
  background-color: #3d2563;
}

.btn-danger {
  background-color: #e94560;
  color: #ffffff;
}

.btn-danger:active {
  background-color: #c7364f;
}

/* 卡片样式 */
.card {
  background-color: #1a1a2e;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #ffffff;
}

.subtitle {
  font-size: 32rpx;
  color: #a0a0a0;
  margin: 10rpx 0;
}

/* 输入框样式 */
.input {
  background-color: #1a1a2e;
  border: 2rpx solid #533483;
  border-radius: 10rpx;
  padding: 20rpx;
  color: #ffffff;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.input:focus {
  border-color: #0f3460;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #7A7E83;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

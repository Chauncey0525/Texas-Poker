/* pages/range-analyzer/range-analyzer.wxss */
.input-section {
  margin-top: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #a0a0a0;
  margin-bottom: 10rpx;
}

.picker {
  padding: 20rpx;
  background-color: #16213e;
  border-radius: 8rpx;
  color: #ffffff;
  font-size: 28rpx;
}

.stats {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #16213e;
  border-radius: 8rpx;
}

.stat-item {
  font-size: 26rpx;
  color: #4a90e2;
  font-weight: bold;
}

.range-display {
  margin-top: 30rpx;
}

.title-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-section .title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

.title-section .actions {
  display: flex;
  gap: 10rpx;
}

.btn {
  padding: 10rpx 30rpx;
  background-color: #0f3460;
  color: #ffffff;
  border: none;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.btn-small {
  padding: 8rpx 20rpx;
  font-size: 22rpx;
}

.btn-secondary {
  background-color: #1a1a2e;
}

.btn:active {
  background-color: #16213e;
}

.toolbar {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 30rpx;
}

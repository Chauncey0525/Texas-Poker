/* pages/rooms/detail/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

.room-info-card,
.players-card,
.chat-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.room-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.room-status.waiting {
  background-color: #e8f5e9;
  color: #4caf50;
}

.room-status.playing {
  background-color: #fff3e0;
  color: #ff9800;
}

.room-settings {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.setting-item .label {
  color: #999;
  margin-right: 8rpx;
}

.setting-item .value {
  color: #333;
  font-weight: 500;
}

.players-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.player-item.me {
  background-color: #e3f2fd;
  border: 2rpx solid #0f3460;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.owner-badge {
  display: inline-block;
  background-color: #ff9800;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-left: 10rpx;
}

.player-chips {
  font-size: 24rpx;
  color: #666;
}

.ready-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.ready-status.ready {
  background-color: #4caf50;
  color: #fff;
}

.ready-status.not-ready {
  background-color: #e0e0e0;
  color: #666;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
  color: #fff;
}

.action-btn.danger {
  background-color: #f44336;
  color: #fff;
}

.action-btn.ready {
  background-color: #4caf50;
  color: #fff;
}

.chat-messages {
  max-height: 400rpx;
  margin-bottom: 20rpx;
}

.chat-message {
  padding: 10rpx 0;
  font-size: 26rpx;
}

.chat-nickname {
  color: #0f3460;
  font-weight: 500;
  margin-right: 10rpx;
}

.chat-content {
  color: #333;
}

.chat-input-area {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.chat-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.chat-send-btn {
  background-color: #0f3460;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

/* pages/rooms/detail/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

.room-info-card,
.players-card,
.chat-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.room-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.room-status.waiting {
  background-color: #e8f5e9;
  color: #4caf50;
}

.room-status.playing {
  background-color: #fff3e0;
  color: #ff9800;
}

.room-settings {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.setting-item .label {
  color: #999;
  margin-right: 8rpx;
}

.setting-item .value {
  color: #333;
  font-weight: 500;
}

.players-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.player-item.me {
  background-color: #e3f2fd;
  border: 2rpx solid #0f3460;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.owner-badge {
  display: inline-block;
  background-color: #ff9800;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-left: 10rpx;
}

.player-chips {
  font-size: 24rpx;
  color: #666;
}

.ready-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.ready-status.ready {
  background-color: #4caf50;
  color: #fff;
}

.ready-status.not-ready {
  background-color: #e0e0e0;
  color: #666;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
  color: #fff;
}

.action-btn.danger {
  background-color: #f44336;
  color: #fff;
}

.action-btn.ready {
  background-color: #4caf50;
  color: #fff;
}

.chat-messages {
  max-height: 400rpx;
  margin-bottom: 20rpx;
}

.chat-message {
  padding: 10rpx 0;
  font-size: 26rpx;
}

.chat-nickname {
  color: #0f3460;
  font-weight: 500;
  margin-right: 10rpx;
}

.chat-content {
  color: #333;
}

.chat-input-area {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.chat-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.chat-send-btn {
  background-color: #0f3460;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

.invite-code {
  font-weight: bold;
  color: #0f3460;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.copy-btn {
  margin-left: 15rpx;
  padding: 5rpx 15rpx;
  font-size: 22rpx;
  background-color: #0f3460;
  color: #fff;
  border: none;
  border-radius: 5rpx;
}

.invite-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e0e0e0;
}

.invite-btn {
  width: 100%;
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.invite-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10000;
  opacity: 0;
  transition: opacity 0.3s;
  pointer-events: none;
}

.invite-dialog.show {
  opacity: 1;
  pointer-events: auto;
}

.invite-dialog-content {
  background-color: #1a1a2e;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #533483;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.5);
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s;
}

.invite-dialog.show .invite-dialog-content {
  transform: scale(1);
}

.invite-dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(83, 52, 131, 0.3);
}

.invite-dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.invite-dialog-close {
  font-size: 40rpx;
  color: #a0a0a0;
  line-height: 1;
}

.invite-dialog-body {
  padding: 40rpx;
}

.invite-code-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.invite-code-label {
  display: block;
  font-size: 24rpx;
  color: #a0a0a0;
  margin-bottom: 15rpx;
}

.invite-code-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #0f3460;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgba(15, 52, 96, 0.1);
  border-radius: 10rpx;
  border: 2rpx solid #0f3460;
}

.copy-invite-btn {
  width: 100%;
  background-color: #0f3460;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.invite-tips {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 24rpx;
  color: #a0a0a0;
  padding: 20rpx;
  background-color: rgba(15, 52, 96, 0.1);
  border-radius: 10rpx;
}

.invite-dialog-footer {
  padding: 20rpx 40rpx 30rpx;
  border-top: 1rpx solid rgba(83, 52, 131, 0.3);
}

.share-btn {
  width: 100%;
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

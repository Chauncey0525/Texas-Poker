/* pages/rooms/rooms.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.status-tabs {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background-color: #0f3460;
  color: #fff;
  font-weight: bold;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.search-box {
  flex: 1;
  position: relative;
  background-color: #fff;
  border-radius: 25rpx;
  padding: 0 80rpx 0 60rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  position: absolute;
  left: 20rpx;
  font-size: 32rpx;
  color: #999;
}

.clear-btn {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e0e0e0;
  border-radius: 50%;
  font-size: 24rpx;
  color: #666;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 25rpx;
  padding: 0 30rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #333;
  gap: 10rpx;
}

.filter-icon {
  font-size: 20rpx;
  color: #999;
}

/* 筛选面板 */
.filter-panel {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.filter-option {
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.filter-option.active {
  background-color: #0f3460;
  color: #fff;
  border-color: #0f3460;
}

.filter-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-clear {
  background-color: transparent;
  color: #0f3460;
  border: 1rpx solid #0f3460;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
}

.create-room-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
  color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.create-room-btn .icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}

.room-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.room-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.room-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.room-status.waiting {
  background-color: #e8f5e9;
  color: #4caf50;
}

.room-status.playing {
  background-color: #fff3e0;
  color: #ff9800;
}

.room-info {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.info-item .label {
  color: #999;
  margin-right: 8rpx;
}

.info-item .value {
  color: #333;
  font-weight: 500;
}

.room-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.room-id {
  font-size: 24rpx;
  color: #999;
}

.join-btn {
  background-color: #0f3460;
  color: #fff;
  padding: 12rpx 30rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.empty-state-desc {
  font-size: 26rpx;
  color: #a0a0a0;
}

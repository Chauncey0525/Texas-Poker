/* pages/index/index.wxss */
.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(15, 52, 96, 0.3) 0%, rgba(26, 26, 46, 0.3) 100%);
  border-radius: 15rpx;
  border: 1rpx solid rgba(15, 52, 96, 0.5);
  flex: 1;
  margin: 0 10rpx;
  transition: all 0.3s;
}

.stat-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(15, 52, 96, 0.5) 0%, rgba(26, 26, 46, 0.5) 100%);
}

.stat-value {
  font-size: 52rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #0f3460 0%, #4caf50 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #a0a0a0;
  font-weight: 500;
}

.quick-actions {
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #16213e 0%, #1a1a2e 100%);
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.action-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s;
}

.action-item:active::before {
  left: 100%;
}

.action-item:active {
  background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);
  border-color: #533483;
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.3);
}

.action-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
  transition: transform 0.3s;
}

.action-item:active .action-icon {
  transform: scale(1.1);
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #ffffff;
}

.action-desc {
  font-size: 24rpx;
  color: #a0a0a0;
}

.action-arrow {
  font-size: 40rpx;
  color: #7A7E83;
  transition: all 0.3s;
}

.action-item:active .action-arrow {
  color: #0f3460;
  transform: translateX(5rpx);
}

.recent-replays {
  margin-top: 20rpx;
}

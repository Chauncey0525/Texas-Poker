/* pages/replay/replay.wxss */
.header {
  margin-bottom: 20rpx;
}

.history-list {
  margin-bottom: 100rpx;
}

.history-item {
  margin-bottom: 20rpx;
  position: relative;
  transition: all 0.3s;
  border-left: 4rpx solid transparent;
}

.history-item:active {
  transform: translateX(5rpx);
  border-left-color: #0f3460;
  box-shadow: 0 4rpx 15rpx rgba(15, 52, 96, 0.3);
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.item-time {
  font-size: 28rpx;
  color: #a0a0a0;
}

.item-id {
  font-size: 24rpx;
  color: #7A7E83;
}

.item-content {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin: 20rpx 0;
  font-size: 26rpx;
}

.item-content text {
  padding: 8rpx 15rpx;
  background-color: rgba(15, 52, 96, 0.2);
  border-radius: 8rpx;
  color: #a0a0a0;
}

.item-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #1a1a2e;
  border-top: 2rpx solid #533483;
}

/* pages/knowledge/knowledge.wxss */
.search-section {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx;
  background-color: #16213e;
  border-radius: 10rpx;
  border: 2rpx solid #533483;
  color: #ffffff;
  font-size: 28rpx;
}

.categories-section {
  margin-bottom: 20rpx;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #16213e 0%, #1a1a2e 100%);
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.category-item:active {
  transform: scale(0.95);
}

.category-item.active {
  background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);
  border-color: #533483;
  box-shadow: 0 4rpx 15rpx rgba(15, 52, 96, 0.4);
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #ffffff;
}

.articles-section {
  margin-top: 20rpx;
}

.articles-list {
  margin-top: 20rpx;
}

.article-item {
  margin-bottom: 20rpx;
  transition: all 0.3s;
  border-left: 4rpx solid transparent;
}

.article-item:active {
  transform: translateX(5rpx);
  border-left-color: #0f3460;
  box-shadow: 0 4rpx 15rpx rgba(15, 52, 96, 0.3);
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #ffffff;
}

.article-summary {
  font-size: 28rpx;
  color: #a0a0a0;
  margin-bottom: 10rpx;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #7A7E83;
}

.article-category {
  padding: 5rpx 15rpx;
  background-color: #533483;
  border-radius: 5rpx;
  color: #ffffff;
}

.article-date {
  color: #7A7E83;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.empty-state-desc {
  font-size: 26rpx;
  color: #a0a0a0;
}

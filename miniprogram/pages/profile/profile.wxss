/* pages/profile/profile.wxss */
.profile-header {
  text-align: center;
  padding: 60rpx 30rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 4rpx solid #533483;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(83, 52, 131, 0.4);
  background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.stats-section {
  margin-top: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(15, 52, 96, 0.3) 0%, rgba(26, 26, 46, 0.3) 100%);
  border-radius: 15rpx;
  border: 1rpx solid rgba(15, 52, 96, 0.5);
  flex: 1;
  margin: 0 10rpx;
  transition: all 0.3s;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-value {
  font-size: 52rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #0f3460 0%, #4caf50 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #a0a0a0;
  font-weight: 500;
}

.menu-section {
  margin-top: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
  border-left: 4rpx solid transparent;
}

.menu-item:active {
  transform: translateX(5rpx);
  border-left-color: #0f3460;
  background: linear-gradient(135deg, #16213e 0%, #1a1a2e 100%);
  box-shadow: 0 4rpx 15rpx rgba(15, 52, 96, 0.3);
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #ffffff;
}

.menu-arrow {
  font-size: 40rpx;
  color: #7A7E83;
  transition: all 0.3s;
}

.menu-item:active .menu-arrow {
  color: #0f3460;
  transform: translateX(5rpx);
}

.loading-text {
  text-align: center;
  padding: 40rpx;
  color: #a0a0a0;
  font-size: 28rpx;
}

.detailed-stats {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(83, 52, 131, 0.3);
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  font-size: 28rpx;
}

.detail-label {
  color: #a0a0a0;
}

.detail-value {
  font-weight: bold;
  color: #fff;
}

.detail-value.profit {
  color: #4caf50;
}

.detail-value.loss {
  color: #f44336;
}

.stat-value.profit {
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.stat-value.loss {
  background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

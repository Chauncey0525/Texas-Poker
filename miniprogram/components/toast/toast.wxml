<!--components/toast/toast.wxml-->
<view class="toast-container {{show ? 'show' : ''}}" wx:if="{{show}}">
  <view class="toast {{type}}">
    <view class="toast-icon">
      <text wx:if="{{type === 'success'}}">✓</text>
      <text wx:elif="{{type === 'error'}}">✕</text>
      <text wx:elif="{{type === 'warning'}}">⚠</text>
      <text wx:else>ℹ</text>
    </view>
    <text class="toast-message">{{message}}</text>
  </view>
</view>

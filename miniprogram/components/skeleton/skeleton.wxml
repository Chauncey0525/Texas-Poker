<!--components/skeleton/skeleton.wxml-->
<view class="skeleton-container">
  <block wx:if="{{type === 'card'}}">
    <view class="skeleton-card">
      <view class="skeleton-line skeleton-title"></view>
      <view class="skeleton-line skeleton-text" wx:for="{{rows}}" wx:key="index"></view>
    </view>
  </block>
  
  <block wx:elif="{{type === 'list'}}">
    <view class="skeleton-list">
      <view class="skeleton-item" wx:for="{{rows}}" wx:key="index">
        <view class="skeleton-avatar"></view>
        <view class="skeleton-content">
          <view class="skeleton-line skeleton-title"></view>
          <view class="skeleton-line skeleton-text"></view>
        </view>
      </view>
    </view>
  </block>
  
  <block wx:else>
    <view class="skeleton-text">
      <view class="skeleton-line" wx:for="{{rows}}" wx:key="index" style="width: {{index === rows - 1 ? '60%' : '100%'}}"></view>
    </view>
  </block>
</view>

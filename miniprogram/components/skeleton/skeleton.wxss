/* components/skeleton/skeleton.wxss */
.skeleton-container {
  padding: 20rpx;
}

.skeleton-card {
  background-color: #1a1a2e;
  border-radius: 20rpx;
  padding: 30rpx;
}

.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #1a1a2e;
  border-radius: 15rpx;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(90deg, #16213e 25%, #1a1a2e 50%, #16213e 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.skeleton-line {
  height: 30rpx;
  border-radius: 8rpx;
  background: linear-gradient(90deg, #16213e 25%, #1a1a2e 50%, #16213e 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

.skeleton-title {
  height: 40rpx;
  width: 60%;
}

.skeleton-text {
  height: 24rpx;
  width: 100%;
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

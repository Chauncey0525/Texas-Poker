/* components/loading/loading.wxss */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  gap: 6rpx;
}

.loading-spinner.medium {
  gap: 10rpx;
}

.loading-spinner.large {
  gap: 14rpx;
}

.spinner-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #0f3460;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.loading-spinner.small .spinner-dot {
  width: 8rpx;
  height: 8rpx;
}

.loading-spinner.large .spinner-dot {
  width: 16rpx;
  height: 16rpx;
}

.spinner-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.spinner-dot:nth-child(2) {
  animation-delay: -0.16s;
}

.spinner-dot:nth-child(3) {
  animation-delay: 0;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.loading-text {
  font-size: 28rpx;
  color: #a0a0a0;
}
